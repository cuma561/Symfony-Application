{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_tags_edit' %}

{% block main %}
	<h1>{{ 'title.tag_edit'|trans({'%id%': tag.id}) }}</h1>

	{{ include('admin/tag/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}

{% endblock %}

{% block sidebar %}
	<div class="section">
        <a href="{{ path('admin_tags_show', {id: tag.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.tag_show'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/tag/_delete_form.html.twig', {tag: tag}, with_context = false) }}
    </div>

	{{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}