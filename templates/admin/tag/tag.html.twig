{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_tags_index' %}

{% block main %}
	<h1>{{ 'title.tags_list'|trans }}</h1>

	<table class="table table-striped table-middle-aligned">
		<thead>
			<tr>
				<th scope="col">#</td>
				<th scope="col">{{ 'label.tags'|trans }}</td>
				<th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% for tag in tags %}
				<tr>
					<td>{{ tag.id }}</td>
					<td>{{ tag.name }}</td>
					<td class="text-center">
                    	<div class="item-actions">
                       		<a href="" class="btn btn-sm btn-default">
                            	<i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        	</a>
                        	<a href="" class="btn btn-sm btn-primary">
                            	<i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        	</a>
                    	</div>
                	</td>
				</tr>
			{% else %}
				<tr>
					<td>{{ 'tags.no_found_tag'|trans}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% block sidebar %}

	<div class="section actions">
        <a href="" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_tags'|trans }}
        </a>
    </div>


	{{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}