{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block main %}
	<h1>{{ 'title.user_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{'label.username'|trans}}</th>
                <th scope="col">{{'label.fullname'|trans}}</th>
                <th scope="col">{{'label.email'|trans}}</th>
                <td scope="col">{{'label.role'|trans}}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles[0] }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', {id: user.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="6" align="center">{{ 'user.no_users_found'|trans }}</td>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_user'|trans }}
        </a>
    </div>
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}